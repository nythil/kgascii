#include "asciifier.hpp"
#include "glyphmatcher.hpp"
#include "textsurface.hpp"

namespace KG { namespace Ascii {

using boost::gil;

Asciifier::Asciifier(const GlyphMatcher& m)
    :matcher_(m)
{
}

void Asciifier::generate(const gray8c_view_t& imgv, TextSurface& text) const
{
    int char_w = matcher_.glyphWidth();
    int char_h = matcher_.glyphHeight();
    int char_size = char_width * char_height;

    int img_w = imgv.width();
    int img_h = imgv.height();

    gray8_image_t tmpimg(char_w, char_h);
    gray8_view_t tmpview = view(tmpimg);

    for (int r = 0; r < text.rows(); ++r) {
        int y = r * char_w;
        int dy = std::min(char_h, img_h - y);
        for (int c = 0; c < text.cols(); ++c) {
            int x = c * char_w;
            int dx = std::min(char_w, img_h - x);

            fill_pixels(tmpview, 0);
            copy_pixels(subimage_view(imgv, x, y, dx, dy), 
                    subimage_view(tmpview, 0, 0, dx, dy));

            int d2_min = std::numeric_limits<int>::max();
            int cc_min = 32;
            for (int ci = 0; ci < charcodes.size(); ++ci) {
                int cc = charcodes[ci];
                gray8c_view_t glyph_view = font.getGlyph(cc);
                int d2 = 0;
                const unsigned char* tmp_data = interleaved_view_get_raw_data(tmpview);
                const unsigned char* glyph_data = interleaved_view_get_raw_data(glyph_view);
                Eigen::Map<
                for (int gi = 0; gi < char_size; ++gi) {
                    int d1 = tmp_data[gi] - glyph_data[gi];
                    d2 += d1 * d1;
                }
                if (d2 < d2_min) {
                    d2_min = d2;
                    cc_min = cc;
                }
            }
        }
    }

}

} } // namespace KG::Ascii

